{
  "name": "@integration/server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/server/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "options": {
        "command": "webpack-cli build",
        "cwd": "apps/server"
      },
      "configurations": {
        "development": {
          "args": ["--node-env=development"]
        },
        "production": {
          "args": ["--node-env=production"]
        }
      }
    },
    "prune-lockfile": {
      "dependsOn": ["build"],
      "cache": true,
      "executor": "@nx/js:prune-lockfile",
      "outputs": [
        "{workspaceRoot}/apps/server/dist/package.json",
        "{workspaceRoot}/apps/server/dist/pnpm-lock.yaml"
      ],
      "options": {
        "buildTarget": "build"
      }
    },
    "copy-workspace-modules": {
      "dependsOn": ["build"],
      "cache": true,
      "outputs": ["{workspaceRoot}/apps/server/dist/workspace_modules"],
      "executor": "@nx/js:copy-workspace-modules",
      "options": {
        "buildTarget": "build"
      }
    },
    "prune": {
      "dependsOn": ["prune-lockfile", "copy-workspace-modules"],
      "executor": "nx:noop"
    },
    "start": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "@integration/server:build",
        "command": "nodemon --watch src --ext ts --ignore 'src/**/*.spec.ts' --delay 5 --exec \"nx run @integration/server:build:development && node dist/main.js\"",
        "cwd": "apps/server"
      },
      "configurations": {
        "development": {
          "buildTarget": "@integration/server:build:development",
          "command": "nodemon --watch src --ext ts --ignore 'src/**/*.spec.ts' --delay 5 --exec \"nx run @integration/server:build:development && node dist/main.js\""
        },
        "production": {
          "buildTarget": "@integration/server:build:production",
          "command": "node dist/main.js"
        }
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    },
    "migration:deploy": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "options": {
        "commands": [
          "typeorm-ts-node-commonjs migration:run -d src/database/datasource/app.datasource.ts",
          "ts-node --project tsconfig.json src/database/scripts/generate-erd.ts"
        ],
        "parallel": false,
        "cwd": "apps/server"
      },
      "configurations": {
        "development": {
          "envFile": "apps/server/.env"
        },
        "production": {
          "envFile": "apps/server/.env.production"
        }
      }
    },
    "migration:revert": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "options": {
        "command": "typeorm-ts-node-commonjs migration:revert -d src/database/datasource/app.datasource.ts",
        "cwd": "apps/server"
      },
      "configurations": {
        "development": {
          "envFile": "apps/server/.env"
        },
        "production": {
          "envFile": "apps/server/.env.production"
        }
      }
    },
    "migration:generate": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "options": {
        "command": "typeorm-ts-node-commonjs migration:generate src/database/migrations/{args.name} -d src/database/datasource/app.datasource.ts",
        "cwd": "apps/server"
      },
      "configurations": {
        "development": {
          "envFile": "apps/server/.env"
        },
        "production": {
          "envFile": "apps/server/.env.production"
        }
      }
    },
    "migration:create": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "options": {
        "command": "typeorm-ts-node-commonjs migration:create src/database/migrations/{args.name}",
        "cwd": "apps/server"
      },
      "configurations": {
        "development": {
          "envFile": "apps/server/.env"
        },
        "production": {
          "envFile": "apps/server/.env.production"
        }
      }
    },
    "migration:show": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "options": {
        "command": "typeorm-ts-node-commonjs migration:show -d src/database/datasource/app.datasource.ts",
        "cwd": "apps/server"
      },
      "configurations": {
        "development": {
          "envFile": "apps/server/.env"
        },
        "production": {
          "envFile": "apps/server/.env.production"
        }
      }
    },
    "migration:schema:sync": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "options": {
        "command": "typeorm-ts-node-commonjs schema:sync -d src/database/datasource/app.datasource.ts",
        "cwd": "apps/server"
      },
      "configurations": {
        "development": {
          "envFile": "apps/server/.env"
        },
        "production": {
          "envFile": "apps/server/.env.production"
        }
      }
    }
  }
}
